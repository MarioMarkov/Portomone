<form action="/expenses" method="POST">
    <label>Expense Title: </label>
    <input type="text" name="title" value="<% expense.title %>">
    <label>Expense Cost: </label>
    <input type="number" name="cost" value="<% expense.cost %>">
    <label>Person: </label>
    <select name="person">
        <% persons.forEach(person => {%> 
            <% if(person.id === expense.person){ %>
                <option selected label="<%= person.name %>" value="<%= person.id %>"></option> 
            <% }else {%> 
                <option label="<%= person.name %>" value="<%= person.id %>"></option> 
            <% } %> 
        <% }) %> 
    </select>
    <button type="submit">Create</button>
</form>