<h2>Edit Expense</h2>
<form action="/expenses/<%= expense.id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value=<%=expense.title%>>
    <label for="cost">Cost</label>
    <input type="text" name="cost" value=<%=expense.cost%>>
    <label for="category">Category</label>
    <input type="text" name="category" value=<%=expense.category%>>
    <select name="person">
        <% persons.forEach(person => {%> 
            <% if(person.id === expense.person){ %>
                <option selected label="<%= person.name %>" value="<%= person.id %>"></option> 
            <% }else {%> 
                <option label="<%= person.name %>" value="<%= person.id %>"></option> 
            <% } %> 
        <% }) %> 
    </select>
    <a href="/expenses/<%= expense.id %>">Cancel</a>
    <button type="submit" >Update</button>
</form>
